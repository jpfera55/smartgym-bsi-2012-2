<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/smartgym?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <mapping class="smartgym.models.entities.Address"/>
    <mapping class="smartgym.models.entities.Contact"/>
    <mapping class="smartgym.models.entities.Person"/>
    <mapping class="smartgym.models.entities.Client"/>
    <mapping class="smartgym.models.entities.Employee"/>
    <mapping class="smartgym.models.entities.Payment"/>
    <mapping class="smartgym.models.entities.Manager"/>
  </session-factory>
</hibernate-configuration>
